{
  "manifest_version": 3,
  "name": "Yet Another Language Learning Extension",
  "description": "An extension to facilitate learning a new language.",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon_32.png"
  },
  "icons": {
    "128": "icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon_128.png", "icon_32.png", "styling/*", "bold.svg"],
      "matches": []
    }
  ],
  "permissions": ["storage", "scripting", "contextMenus"],
  "host_permissions": [
    "https://api.pons.com/v1/"
  ]
}
